/* pages/chat/chat_l3.wxss */
.chat-container {
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.chat-header {
  display: flex;
  align-items: center;
  height: 80rpx;
  border-bottom: 1rpx solid #f0f0f0;
  box-sizing: border-box;
  margin-bottom: auto;
}

.chat-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 30rpx;
  overflow: hidden;
}

.chat-avatar image {
  width: 64rpx;
  height: 64rpx;
  margin-right: 20rpx;
}

.chat-nickname {
  margin-left: 20rpx;
  font-size: 32rpx;
  color: #333;
}

.chat-message {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}

.chat-message-item {
  margin-bottom: 20rpx;
}
/* self为true表示此消息为自己发送，消息框方向需翻转 */
.chat-message-item.self {
  display: flex;
  flex-direction: row-reverse;
}

.chat-message-content {
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #333;
  max-width: 70%;
  word-wrap: break-word;
  word-break: break-all;
}

.chat-message-time {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
  
}

.chat-input-container {
  display: flex;
  align-items: center;
  height: 120rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #f0f0f0;
  margin-top: auto;
}

.chat-input {
  flex: 0.9;
  height: 70rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 30rpx;
  border: 1rpx solid #f0f0f0;
  font-size: 28rpx;
  text-align: left;
  color: #333;
}

.chat-send {
  flex: 0.1;
  margin-left: 20rpx;
  height: 70rpx;
  border-radius: 30rpx;
  background-color: #19be6b;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}

