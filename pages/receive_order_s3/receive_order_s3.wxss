.order-list {
  position: fixed;
  top: 180rpx;
  left: 0;
  right: 0;
  bottom: 0;
  overflow-y: scroll;
  background-color: #F8F8F8;
}

.weui-cells {
  margin-top: 0;
  margin-bottom: 0;
}

.weui-cell {
  padding: 20rpx;
