.order{
  white-space: nowrap;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgb(0, 0, 0);
  background: rgb(96, 247, 196);
  align-items: center;
  flex-direction: row;
}


.order.img{
  align-items: center;

  display: flex;
  white-space: nowrap;
