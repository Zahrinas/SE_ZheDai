  border-bottom: 1rpx solid #eee;
  background: rgb(96, 247, 196);
  flex-direction: row;
 
}


.order .orderInfo .school {
  color: #fbbd08;
  font-size: 32rpx;
}
.order .orderInfo .type {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: chocolate;
}
.order .orderInfo .time {
  font-size:24rpx;
  color:#999999;
}

.PutButton {
  position: fixed;
  left: 25%;
  top:90%
}


.OrderInform {
  height: 40%;
  display: flex;
  flex-direction: row;
  position: fixed;
  top:25%;
}

.OrderInput {
  flex: 0.9;
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 30rpx;
  border: 1rpx solid #f0f0f0;
  font-size: 28rpx;
  text-align: left;
  color: #333;
}