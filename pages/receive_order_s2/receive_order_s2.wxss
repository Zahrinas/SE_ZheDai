.orderContainer {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.order {
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgb(0, 0, 0);
  background: rgb(89, 192, 159);
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}

.avatar .img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.orderInfo {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  color: #333;
}

.posterId {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.school {
  color: #fbbd08;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.type {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.orderDetails {
  margin-top: 20rpx;
}

.orderDetail {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10rpx;
}

.orderDetail .label {
  font-size: 28rpx;
  color: #999999;
  width: 160rpx;
}

.orderDetail .value {
  font-size: 28rpx;
  color: #333;
}

.button {
  width: 90%;
  height: 80rpx;
  background-color: rgb(0, 174, 255);
  color: #ffffff;
  font-size: 32rpx;
  text-align: center;
}
