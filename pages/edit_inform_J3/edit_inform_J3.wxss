.editInfo {
  margin-top: 20px;
}

.weui-form__control {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20px;
}

.weui-label {
  width: 100px;
  font-size: 14px;
  color: #888888;
}

.weui-input {
  flex: 1;
  height: 36px;
  line-height: 36px;
  padding: 0 10px;
  border: 1px solid #d9d9d9;
  border-radius: 3px;
  font-size: 14px;
  color: #333333;
  background-color: #f5f5f5;
  margin-right: 10px; /* 右边距 */
}


.weui-btn {
  margin-top: 20px;
  width: 100%;
}
